<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">

    <body>
        <release date="2013-11-30" description="November 2013 update" version="0.4.0">
            <action issue="29" dev="dadoonet" type="fix">
                Check that server/login are defined when using ssh.
            </action>
            <action issue="36" dev="dadoonet" type="update">
                Update to Elasticsearch 0.90.7.
            </action>
            <action issue="35" dev="dadoonet" type="add">
                Option to not delete documents when files are removed.
            </action>
            <action issue="32" dev="dadoonet" type="fix" due-to="Fabien Gaujous">
                Index is not updated when files are deleted on windows platform.
            </action>
            <action issue="38" dev="dadoonet" type="update">
                Replace mapper-attachment plugin by Tika.
            </action>
            <action issue="37" dev="dadoonet" type="add">
                Store origin URL in documents.
            </action>
        </release>

        <release date="2013-06-15" description="Add SSH support" version="0.3.0">
            <action issue="12" dev="dadoonet" type="add" due-to="Ajitpals">
                Add SSH support.
            </action>
        </release>

        <release date="2013-04-30" description="April 2013 update" version="0.2.0">
            <action issue="17" dev="dadoonet" type="add" due-to="Josef Jezek">
                Modify Indexed Characters limit.
            </action>
            <action issue="18" dev="dadoonet" type="add" due-to="Yahia Ammar">
                Add filesize to indexed document.
            </action>
            <action issue="20" dev="dadoonet" type="update" >
                Rename package from org.elasticsearch to fr.pilato...
            </action>
            <action issue="21" dev="dadoonet" type="add" >
                Suspend or restart a single FSRiver instance.
            </action>
            <action issue="23" dev="dadoonet" type="update">
                Move to Elasticsearch 0.90.0.
            </action>
        </release>

        <release date="2013-03-15" description="March 2013 update" version="0.1.0">
            <action issue="7" dev="dadoonet" type="add">
                JSON support: use filename as ID.
            </action>
            <action issue="8" dev="dadoonet" type="fix" due-to="Pascal Dorini">
                Problem on virtualpath on linux servers.
            </action>
            <action issue="9" dev="dadoonet" type="update">
                Move to Elasticsearch 0.90.0.Beta1.
            </action>
            <action issue="10" dev="dadoonet" type="fix" due-to="Pascal Dorini">
                FSriver error when "_source" is disable.
            </action>
        </release>

        <release date="2012-06-08" description="First public release (very alpha version)" version="0.0.1">
        </release>

    </body>

</document>
